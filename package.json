{
  "name": "node-hn-api",
  "version": "3.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "clean": true,
    "splitting": false,
    "dts": true,
    "minify": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "engines": {
    "node": ">=16.6.0"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint"
    }
  },
  "author": "Arjun Sajeev (https://arjunsajeev.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arjunsajeev/node-hn-api.git"
  },
  "keywords": [
    "hacker news",
    "hn"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "isomorphic-fetch": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
