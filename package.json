{
  "name": "node-hn-api",
  "version": "4.0.1",
  "description": "A modern TypeScript wrapper for the Firebase Hacker News API with full type support and promise-based methods",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "clean": true,
    "splitting": false,
    "dts": true,
    "minify": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "lint": "eslint",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish --access public",
    "prepublishOnly": "pnpm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint"
    }
  },
  "author": "Arjun Sajeev (https://arjun.xyz)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arjunsajeev/node-hn-api.git"
  },
  "keywords": [
    "hacker news",
    "hn"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  }
}
